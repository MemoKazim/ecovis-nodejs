<section class="section-4" id="contact">
  <div class="contact-container">
    <div class="contact-left">
      <div class="contact">
        <span>Contact</span>
      </div>
      <div class="get-in-touch">
        <span>Get in touch</span>
      </div>
      <div class="contact-form">
        <form action="/eng/success" method="post">
          <input
            type="text"
            name="fname"
            placeholder="First name"
            class="form-item"
            required
          />
          <input
            type="text"
            name="lname"
            placeholder="Last name"
            class="form-item"
            required
          />
          <input
            type="email"
            name="email"
            placeholder="Email"
            class="form-item"
            required
          />
          <input
            type="tel"
            name="phone"
            placeholder="Phone number (0555555555)"
            class="form-item"
          />
          <textarea
            name="message"
            cols="30"
            rows="8"
            placeholder="Message"
            required
          ></textarea>
          <button type="submit" class="form-button">Send</button>
        </form>
      </div>
    </div>
